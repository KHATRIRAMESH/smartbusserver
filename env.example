# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/smartbus_db

# JWT Configuration
ACCESS_TOKEN_SECRET=your_access_token_secret_here_make_it_long_and_secure
ACCESS_TOKEN_EXPIRY=4d
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here_make_it_long_and_secure
REFRESH_TOKEN_EXPIRY=30d

# Server Configuration
PORT=3001
NODE_ENV=production

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# CORS Origins (comma-separated URLs)
ALLOWED_ORIGINS=https://your-admin-domain.com,https://your-mobile-app.com,http://localhost:3000,http://localhost:8081

# Google Maps API (for distance calculations)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# WebSocket Configuration
WS_PORT=3002

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security
BCRYPT_ROUNDS=12
COOKIE_SECRET=your_cookie_secret_here 